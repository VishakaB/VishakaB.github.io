    <!-- Add Downloadable CV Link Here -->
    <a href="https://drive.google.com/file/d/1cf4Sw_-2U2HUrnF1Wn2zngqrPnmyX7ar/view?usp=sharing" download class="btn btn-primary">Download CV</a>
  </div>
  <div class="mb-5">
    <div class="text-2xl w-full font-bold">Research Interests</div>
  </div>

  <div class="mb-10 text-justify">
    Her research interests include:
  </div>

  <div class="time-line-container grid gap-4 mb-10"> 
    <TimeLineElement
      title="Multi-Agent based modelling"
    />
    <TimeLineElement
      title="Automotive System and Software Architecture Design"
    />
    <TimeLineElement
      title="Communication protocol and Localization Algorithm Design for wireless, mobile cooperative and connected systems"
    />
    <TimeLineElement
      title="Optimization Techniques for Automotive Systems"
    />
    <TimeLineElement
      title="Federated Learning for  Multi-Access Edge Computing"
    />
  </div>
  <script>
      document.addEventListener("DOMContentLoaded", () => {
        const themeToggleBtn = document.getElementById("theme-toggle");
        const themeContainer = document.getElementById("theme-container");
        const currentTheme = localStorage.getItem("theme") || "light";

        // Apply the saved theme
        if (currentTheme === "dark") {
          themeContainer.classList.add("dark-theme");
        }

        themeToggleBtn.addEventListener("click", () => {
          themeContainer.classList.toggle("dark-theme");
          const newTheme = themeContainer.classList.contains("dark-theme") ? "dark" : "light";
          localStorage.setItem("theme", newTheme);
        });
      });
  </script>
  </body>
</BaseLayout>